{
    "section.admin": {
        "methode": "GET",
        "path": "admin/section/:theme",
        "uses": "Section@admin",
        "with": {
            ":theme": "theme_admin|theme"
        }
    },
    "section.update": {
        "methode": "POST",
        "path": "admin/section/:id/edit",
        "uses": "Section@update",
        "with": {
            ":id": "\\d+"
        }
    },
    "block.show": {
        "methode": "GET",
        "path": "block/:id",
