{
    "menu.show": {
        "methode": "GET",
        "path": "menu/:item",
        "uses": "Menu@show",
        "with": {
            ":item": "[a-z-]+"
        }
    },
    "menu.show.check": {
        "methode": "POST",
        "path": "menu/:item",
        "uses": "Menu@showCheck",
        "with": {
            ":item": "[a-z-]+"
        }
    },
    "menu.link.add": {
        "methode": "GET",
        "path": "menu/:item/link/add",
        "uses": "Link@create",
        "with": {
            ":item": "[a-z-]+"
        }
    },
    "menu.link.store": {
        "methode": "POST",
        "path": "menu/:item/link/add",
        "uses": "Link@store",
        "with": {
            ":item": "[a-z-]+"
        }
    },
    "menu.link.edit": {
        "methode": "GET",
        "path": "menu/:menu/link/:item/edit",
        "uses": "Link@edit",
        "with": {
            ":item": "\\d+",
            ":menu": "[a-z-]+"
        }
    },
    "menu.link.update": {
        "methode": "POST",
        "path": "menu/:menu/link/:item/edit",
        "uses": "Link@update",
        "with": {
            ":item": "\\d+",
            ":menu": "[a-z-]+"
        }
    },
    "menu.link.delete": {
        "methode": "GET",
        "path": "menu/:menu/link/:item/delete",
        "uses": "Link@delete",
        "with": {
            ":menu": "[a-z-]+",
            ":item": "\\d+"
        }
    }
}