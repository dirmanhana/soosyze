{
    "news.index": {
        "methode": "GET",
        "path": "news",
        "uses": "News@index"
    },
    "news.page": {
        "methode": "GET",
        "path": "news/page/:id",
        "uses": "News@page",
        "with": {
            ":id": "\\d*"
        }
    },
    "news.years": {
        "methode": "GET",
        "path": "news/:years:id",
        "uses": "News@viewYears",
        "with": {
            ":years": "\\d{4}",
            ":id": "(/page/\\d+)?"
        }
    },
    "news.month": {
        "methode": "GET",
        "path": "news/:years/:month:id",
        "uses": "News@viewMonth",
        "with": {
            ":years": "\\d{4}",
            ":month": "0[1-9]|1[0-2]",
            ":id": "(/page/\\d+)?"
        }
    },
    "news.day": {
        "methode": "GET",
        "path": "news/:years/:month/:day:id",
        "uses": "News@viewDay",
        "with": {
            ":years": "\\d{4}",
            ":month": "0[1-9]|1[0-2]",
            ":day": "[0-2][1-9]|3[0-1]",
            ":id": "(/page/\\d+)?"
        }
    },
    "news.rss": {
        "methode": "GET",
        "path": "news/rss.xml",
        "uses": "News@viewRss"
    }
}