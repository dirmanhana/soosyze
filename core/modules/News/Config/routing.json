{
    "news.index": {
        "methode": "GET",
        "path": "news",
        "uses": "News@index"
    },
    "news.page": {
        "methode": "GET",
        "path": "news/page/:id",
        "uses": "News@page",
        "with": {
            ":id": "[1-9][0-9]*"
        }
    },
    "news.years": {
        "methode": "GET",
        "path": "news/:years",
        "uses": "News@viewYears",
        "with": {
            ":years": "\\d{4}"
        }
    },
    "news.page.years": {
        "methode": "GET",
        "path": "news/:years/page/:id",
        "uses": "News@viewYearsPage",
        "with": {
            ":years": "\\d{4}",
            ":id": "[1-9][0-9]*"
        }
    },
    "news.month": {
        "methode": "GET",
        "path": "news/:years/:month",
        "uses": "News@viewMonth",
        "with": {
            ":years": "\\d{4}",
            ":month": "0[1-9]|1[0-2]"
        }
    },
    "news.page.month": {
        "methode": "GET",
        "path": "news/:years/:month/page/:id",
        "uses": "News@viewMonthPage",
        "with": {
            ":years": "\\d{4}",
            ":month": "0[1-9]|1[0-2]",
            ":id": "[1-9][0-9]*"
        }
    },
    "news.day": {
        "methode": "GET",
        "path": "news/:years/:month/:day",
        "uses": "News@viewDay",
        "with": {
            ":years": "\\d{4}",
            ":month": "0[1-9]|1[0-2]",
            ":day": "[0-2][1-9]|3[0-1]"
        }
    },
    "news.page.day": {
        "methode": "GET",
        "path": "news/:years/:month/:day/page/:id",
        "uses": "News@viewDayPage",
        "with": {
            ":years": "\\d{4}",
            ":month": "0[1-9]|1[0-2]",
            ":day": "[0-2][1-9]|3[0-1]",
            ":id": "[1-9][0-9]*"
        }
    },
    "news.rss": {
        "methode": "GET",
        "path": "news/rss.xml",
        "uses": "News@viewRss"
    }
}