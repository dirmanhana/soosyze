{
    "news.install": {
        "class": "SoosyzeCore\\News\\Installer",
        "hooks": {
            "install.menu": "hookInstallMenu"
        }
    },
    "news.hook.user": {
        "class": "SoosyzeCore\\News\\Services\\HookUser",
        "hooks": {
            "route.news.index": "hookRouteNodeSow",
            "route.news.page": "hookRouteNodeSow",
            "route.news.view.years": "hookRouteNodeSow",
            "route.news.view.month": "hookRouteNodeSow",
            "route.news.view.day": "hookRouteNodeSow",
            "route.news.view.rss": "hookRouteNodeSow"
        }
    },
    "news.hook.config": {
        "class": "SoosyzeCore\\News\\Services\\HookConfig",
        "arguments": [
            "@template"
        ],
        "hooks": {
            "config.edit.menu": "menu",
            "config.edit.news.form.generate": "form",
            "config.update.news.validator": "validator",
            "config.update.news.before": "before"
        }
    }
}