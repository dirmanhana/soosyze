{
    "node.index": {
        "methode": "GET",
        "path": "admin/node",
        "uses": "Node@admin"
    },
    "node.add": {
        "methode": "GET",
        "path": "admin/node/add",
        "uses": "Node@add"
    },
    "node.show": {
        "methode": "GET",
        "path": "node/:id",
        "uses": "Node@show",
        "with": {
            ":id": "\\d+"
        }
    },
    "node.create": {
        "methode": "GET",
        "path": "admin/node/add/:type",
        "uses": "Node@create",
        "with": {
            ":type": "[a-z]+"
        }
    },
    "node.store": {
        "methode": "POST",
        "path": "admin/node/add/:type",
        "uses": "Node@store",
        "with": {
            ":type": "[a-z]+"
        }
    },
    "node.edit": {
        "methode": "GET",
        "path": "admin/node/:id/edit",
        "uses": "Node@edit",
        "with": {
            ":id": "\\d+"
        }
    },
    "node.update": {
        "methode": "POST",
        "path": "admin/node/:id/edit",
        "uses": "Node@update",
        "with": {
            ":id": "\\d+"
        }
    },
    "node.delete": {
        "methode": "GET",
        "path": "admin/node/:id/delete",
        "uses": "Node@delete",
        "with": {
            ":id": "\\d+"
        }
    }
}