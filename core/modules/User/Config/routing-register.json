{
    "user.register.create": {
        "methode": "GET",
        "path": "user/register",
        "uses": "Register@create"
    },
    "user.register.store": {
        "methode": "POST",
        "path": "user/register",
        "uses": "Register@store"
    },
    "user.activate": {
        "methode": "GET",
        "path": "user/:id/activate/:token",
        "uses": "Register@activate",
        "with": {
            ":id": "\\d+",
            ":token": "[0-9a-zA-Z_-]+"
        }
    }
}