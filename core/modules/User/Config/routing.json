{
    "user.login": {
        "methode": "GET",
        "path": "user/login",
        "uses": "User@login"
    },
    "user.login.check": {
        "methode": "POST",
        "path": "user/login",
        "uses": "User@loginCheck"
    },
    "user.relogin": {
        "methode": "GET",
        "path": "user/relogin",
        "uses": "User@relogin"
    },
    "user.relogin.check": {
        "methode": "POST",
        "path": "user/relogin",
        "uses": "User@reloginCheck"
    },
    "user.reset": {
        "methode": "GET",
        "path": "user/:id/reset/:token",
        "uses": "User@resetUser",
        "with": {
            ":id": "\\d+",
            ":token": "[0-9a-zA-Z]+"
        }
    },
    "user.logout": {
        "methode": "GET",
        "path": "user/logout",
        "uses": "User@logout"
    },
    "user.account": {
        "methode": "GET",
        "path": "user",
        "uses": "User@account",
        "with": {
            ":id": "\\d+"
        }
    },
    "user.show": {
        "methode": "GET",
        "path": "user/:id",
        "uses": "User@show",
        "with": {
            ":id": "\\d+"
        }
    },
    "user.edit": {
        "methode": "GET",
        "path": "user/:id/edit",
        "uses": "User@edit",
        "with": {
            ":id": "\\d+"
        }
    },
    "user.update": {
        "methode": "POST",
        "path": "user/:id/edit",
        "uses": "User@udpate",
        "with": {
            ":id": "\\d+"
        }
    }
}