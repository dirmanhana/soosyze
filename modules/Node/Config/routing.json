{
    "node.index": {
        "methode": "GET",
        "path": "admin/content",
        "uses": "Node@index"
    },
    "node.add": {
        "methode": "GET",
        "path": "admin/content/add",
        "uses": "Node@add"
    },
    "node.show": {
        "methode": "GET",
        "path": "node/:item",
        "uses": "Node@view",
        "with": {
            ":item": "\\d+"
        }
    },
    "node.create": {
        "methode": "GET",
        "path": "node/add/:item",
        "uses": "Node@create",
        "with": {
            ":item": "[a-z]+"
        }
    },
    "node.store": {
        "methode": "POST",
        "path": "node/add/:item",
        "uses": "Node@store",
        "with": {
            ":item": "[a-z]+"
        }
    },
    "node.edit": {
        "methode": "GET",
        "path": "node/:item/edit",
        "uses": "Node@edit",
        "with": {
            ":item": "\\d+"
        }
    },
    "node.update": {
        "methode": "POST",
        "path": "node/:item/edit",
        "uses": "Node@update",
        "with": {
            ":item": "\\d+"
        }
    },
    "node.delete": {
        "methode": "GET",
        "path": "node/:item/delete",
        "uses": "Node@delete",
        "with": {
            ":item": "\\d+"
        }
    }
}